<body>
    <!-- Create a table... populated with all the users in the database... EXCEPT ADMINS
     -->
     <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">User Email</th>
            <th scope="col">Make Admin</th>
            <th scope="col">Remove</th>
        </tr>
        </thead>

        <tbody class = "userTable">


          <% for(let i=0; i< data.length ; i++){ %>
            <tr>
              <td> <%= data[i].email %></td>
              <td><button class="btn btn-success btnAdmin" data-id = <%= data[i]._id %> > Make Admin</button></td>
              <td><button class="btn btn-danger btnDelete" data-id =  <%= data[i]._id %> >Remove</button></td> 

            </tr>
            
        <% } %>
       
        </tbody>
      </table>



    <script type="text/javascript">

try {
$('.btnAdmin').click(function(){  
  const dataKey = $(this).attr("data-id"); // _id 
  //User.findById(dataKey);

$.post("/admin" , {
  id : dataKey  ,
});
location.reload();
});
}catch(err){
  alert(err);
}

     

</script>

<script>


try {
$('.btnDelete').click(function(){  
  const dataKey = $(this).attr("data-id"); // _id 
  //User.findById(dataKey);

$.post("/admin" , {
  action: "delete",
  id : dataKey  ,
  
});
location.reload();
});
}catch(err){
  alert(err);
}

</script>
    


