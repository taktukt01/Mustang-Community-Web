<script>

$('.remove-image').click(function(){

    var data = $.parseJSON($(this).attr('data-key'));
  

    $.post("/gallery",
    {
        index:  data  
    }).done(function(data){
      setTimeout(function(){
           location.reload(); 
      }, 1000); 
   });
    })


</script>
</body>


<%- include('partials/footer') %>
</html>