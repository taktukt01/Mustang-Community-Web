                    <button type="button" class="btn btn-primary mt-3" data-toggle="modal"
                        data-target="#sundaySchoolHistory">
                        More Info
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="sundaySchoolHistory" tabindex="-1" role="dialog"
